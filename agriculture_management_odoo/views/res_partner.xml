<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record id="view_partner_form_custom" model="ir.ui.view">
    <field name="name">res.partner.form.custom</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <div class="oe_button_box" position="after">
            <!-- Agregar el Smart Button para mostrar las ventas -->
            <button class="oe_stat_button" type="action" name="442" context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}"
                    attrs="{'invisible': [('task_count', '=', 0)]}" icon="fa-tasks">
                        <field string="Tasks" name="task_count" widget="statinfo"/>
            </button>
        </div>
    </field>
</record>
</odoo>