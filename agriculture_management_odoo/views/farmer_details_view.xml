    <record id="view_vet_details_form" model="ir.ui.view">
        <field name="name">vet.details.form</field>
        <field name="model">vet.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="vet_name"
                                   widget="res_partner_many2one"
                                   context="{'show_address': 1}"
                                   options='{"always_reload": True}'/>
                        </group>
                        <group>
                            <field name="vet_name_image" widget="image"/>
                        </group>
                    </group>
                    <field name="note" placeholder="Location Description"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
